{
    "compilerOptions": {
        "target": "es2016",
        "module": "NodeNext",
        "declaration": true,
        "baseUrl": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "test"
    ]
}
